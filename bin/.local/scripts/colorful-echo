#!/usr/bin/env bash

GREEN="\033[0;32m"
RED="\033[0;31m"
YELLOW="\033[0;33m"
# NC: no color
NC="\033[0m"

# Print usage information
usage() {
    echo "Usage: $0 <MESSAGE> [COLOR]"
    echo " - COLOR: [GREEN | RED | YELLOW]"
    echo "Example: $0 'Error message' RED"
}

# Main logic for colorful echo
main() {
    if [ "$#" -lt 1 ]; then
        echo "Error: You must provide a message." >&2
        usage
        exit 1
    fi

    local message="$1"
    local color="$2"

    case "$color" in
        GREEN) echo -e "${GREEN}${message}${NC}" ;;
        RED) echo -e "${RED}${message}${NC}" ;;
        YELLOW) echo -e "${YELLOW}${message}${NC}" ;;
        ""|NONE) echo -e "$message" ;;
        *) echo -e "${YELLOW}Unsupported color. Defaulting to no color.${NC}\n$message" ;;
    esac
}

main "$@"
