#!/usr/bin/env bash

usage() {
    echo "Usage: $0 <FILE1> <FILE2>"
    echo "Example: $0 file1 file2"
}

main() {
    if [ "$#" -ne 2 ]; then
        colorful-echo "You should pass 2 files" "RED"
        usage
        exit 1
    fi

    local TMPFILE=tmp.$$
    mv "$1" $TMPFILE && mv "$2" "$1" && mv $TMPFILE "$2"
    colorful-echo "Files '$1' and '$2' successfully swapped" "GREEN"
}

main "$@"
