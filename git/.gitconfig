[user]
    name = alexiszamanidis
    email = alexiszamanidis@outlook.com
[oh-my-zsh]
    hide-status = 1
[credential]
    helper = store
[core]
    editor = nvim
[mergetool]
    keepBackup = false
[pager]
    branch = false
[pull]
    rebase = true
[rebase]
    autosquash = true
    abbreviateCommands = true
[rerere]
    enabled = true
[init]
    defaultBranch = master
[advice]
    detachedHead = false
[fetch]
    prune = true
[submodule]
    recurse = true
[push]
    autoSetupRemote = true

# theme - colors
[color]
    ui = auto
[color "branch"]
    current = cyan bold reverse
    local = white
    plain =
    remote = cyan
[color "diff"]
    commit =
    func = cyan
    plain =
    whitespace = magenta reverse
    meta = white
    frag = cyan bold reverse
    old = red
    new = green
[color "grep"]
    context =
    filename =
    function =
    linenumber = white
    match =
    selected =
    separator =
[color "interactive"]
    error =
    header =
    help =
    prompt =
[color "status"]
    added = green
    changed = yellow
    header =
    localBranch =
    nobranch =
    remoteBranch = cyan bold
    unmerged = magenta bold reverse
    untracked = red
    updated = green bold
